# frozen_string_literal: true
source "https://rubygems.org"

git_source(:github) {|repo_name| "https://github.com/#{repo_name}" }

gem "sinatra"  # rack application
gem "sinatra-contrib"  # for sinatra reloader
gem "unicorn"  # rack application server
gem "rake"  # task management tool
gem "activerecord"  # O/R mapper
gem "sinatra-activerecord"  # Activerecord rake task for sinatra
gem "sqlite3"  # Database
gem "bcrypt"  # Active record password encrypt/decrypt library
gem "rmagick"  # image processing
